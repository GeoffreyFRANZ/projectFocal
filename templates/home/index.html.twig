{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}
        {% block stylesheets %}
            {{ parent() }}
            {{ encore_entry_link_tags('gallery') }}
        {% endblock %}

{% block body %}
    <div class="d-flex w-100">
        <div id="filter-img" class="w-25 mt-5 ms-2 me-2">
            <div  class=" w-100 border p-5">
                <h3 class="text-center tm-text-primary">Affiner la recherche</h3>
                        {{ form_start(form, {'attr': {'class': 'text-center', 'id' :'form-filter'}}) }}
                    <div class="form-group">
                        {{ form_widget(form.category, {'attr': {'class': 'form-control rounded-0'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.user, {'attr': {'class': 'form-control rounded-0'}}) }}
                    </div>
                    <button class="btn btn-outline-success tm-search-btn ms-auto">
                        chercher
                    </button>
                {{ form_end(form) }}
            </div>
        </div>
        <div id="gallery" class="w-75 ms-2 mt-5"></div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('gallery') }}
{% endblock %}