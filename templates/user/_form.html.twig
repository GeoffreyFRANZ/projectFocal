<div class=" d-flex  justify-content-center">
    <div  class="w-25">
        <div class="w-100">

            {{ form_start(form,  {'attr': {'class':  'tm-constact'}}) }}
            <form id="contact-form" action=""  class="tm-contact-form ">
                <div class="form-group">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control rounded-0'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.email, {'attr':{'class': 'form-control rounded-0', 'name': 'email'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.roles, {'attr': {'class': 'form-control', 'id': 'contact-select', 'name': 'inquiry'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group tm-text-right">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
                {{ form_end(form) }}
        </div>
    </div>
</div> <!-- container-fluid, tm-container-content -->


